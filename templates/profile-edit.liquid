			<label>Edad</label>
			<input type="text" name="name" placeholder="{{ model.user_age }}">
			<label>Url Personal</label>
			<input type="text" name="name" placeholder="{{ model.user_website }}">
			
			<label>Correo electrónico</label>
			<input type="text" name="name" placeholder="{{ model.user_mail }}">
			<label>Teléfono</label>
			<input type="text" name="name" placeholder="{{ model.user_phone }}">
			
			<label>Dirección</label>
			<input type="text" name="name" placeholder="{{ model.user_address }}">      
			</div>
			</div>
			
		</div>	
	</div>
</div>


