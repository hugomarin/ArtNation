{% model "hugo.json" %}
{% block title %}Perfil de {{ model.user }} {% endblock %}


{% block content %} 

<div class="row">
	<div class="large-6 columns large-centered">
	
		<h3>Editar perfil</h3>
		<div class="panel">
		
			<div class="row">
			<div class="large-12 columns">
			
			<label>Imagen</label>
			<a class="th radius" href="../img/demos/demo2.png">
				<img src="{{ model.user_img }}">
			</a>
			
			<label>Nombre</label>
			<input type="text" name="name" placeholder="{{ model.user }}">
			
			
